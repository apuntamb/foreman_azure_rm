<%= selectable_f f, :network, [],
                 { :include_blank => _('Please first select an image then an Azure region'),
                   :selected => nil#f.object.network
                 },
                 {
                   :label => _('Azure Subnet'),
                   :required => true,
                   :id => 'azure_rm_subnet',
                   :class => "col-lg-8"
                 }
%>

<%= selectable_f f, :bridge, ['None', 'Dynamic', 'Static'],
                 { :selected => nil},#f.object.bridge },
                 {
                     :label => _("Public IP"),
                     :label_size => "col-md-2"
                 }
%>

<%= checkbox_f f, :name,
               {
                 :label => _("Static Private IP"),
                 :label_size => "col-md-2"
               },
             'true',
             'false'

%>
